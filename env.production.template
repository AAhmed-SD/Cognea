# Cognie Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_JWT_KEY=your_supabase_jwt_secret_here

# =============================================================================
# AI CONFIGURATION (OpenAI)
# =============================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# NOTION INTEGRATION
# =============================================================================
NOTION_CLIENT_ID=your_notion_client_id_here
NOTION_CLIENT_SECRET=your_notion_client_secret_here
NOTION_REDIRECT_URI=https://yourdomain.com/api/notion/callback
NOTION_WEBHOOK_SECRET=your_notion_webhook_secret_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics

PERFORMANCE_MONITORING_ENABLED=true
SLOW_QUERY_THRESHOLD=1.0
ERROR_RATE_THRESHOLD=5.0

ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_RECIPIENTS=admin@example.com

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_SENTRY=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
DISABLE_RATE_LIMIT=false
ENABLE_ANALYTICS=true
ENABLE_NOTION_INTEGRATION=true
ENABLE_AI_FEATURES=true

# =============================================================================
# PAYMENT CONFIGURATION (Optional)
# =============================================================================
STRIPE_PUBLISHING_KEY=pk_test_your_stripe_publishing_key
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=4

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
NOTIFICATION_BATCH_SIZE=100

# =============================================================================
# AI COST TRACKING
# =============================================================================
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=100.00
COST_ALERT_EMAIL=admin@yourdomain.com

# =============================================================================
# DEVELOPMENT OVERRIDES (Set to false in production)
# =============================================================================
DISABLE_AUTH=false
DISABLE_RATE_LIMIT=false
ENABLE_DEBUG_ENDPOINTS=false 