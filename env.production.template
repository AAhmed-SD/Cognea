# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Environment
ENVIRONMENT=production
DEBUG=false

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_KEY=your-jwt-secret

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-key

# Stripe Configuration (for payments)
STRIPE_PUBLISHING_KEY=pk_live_your-stripe-key
STRIPE_API=sk_live_your-stripe-secret

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
MIN_PASSWORD_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
DISABLE_RATE_LIMIT=false

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Trusted Hosts
TRUSTED_HOSTS=yourdomain.com,api.yourdomain.com

# Budget Limits
DAILY_BUDGET_LIMIT_USD=10.0
MONTHLY_BUDGET_LIMIT_USD=100.0

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Monitoring
ENABLE_MONITORING=true
METRICS_ENDPOINT=/metrics

# HTTPS Configuration
ENABLE_HTTPS=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Database Configuration (if using external database)
DATABASE_URL=postgresql://user:password@host:port/database

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/personal-agent/app.log

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true 